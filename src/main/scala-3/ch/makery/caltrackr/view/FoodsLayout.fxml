<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="300.0" spacing="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ch.makery.caltrackr.view.FoodsLayoutController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <TableView fx:id="foodsTable" prefHeight="400" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="foodNameColumn" text="Food Name" />
                <TableColumn fx:id="foodCaloriesColumn" text="Calories" />
                <TableColumn fx:id="foodProteinColumn" text="Protein" />
                <TableColumn fx:id="foodCarbsColumn" text="Carbs" />
                <TableColumn fx:id="foodFatColumn" text="Fat" />
            </columns>
        </TableView>
        <Button onAction="#handleAddFood" text="+ Add Food" />
    </children>
</VBox>